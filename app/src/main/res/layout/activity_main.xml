<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/miojo_bg"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp">

        <TextView
            android:id="@+id/tv_miojo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_miojo"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/ed_miojo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/ed_numero"/>

        <TextView
            android:id="@+id/tv_ampl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/tv_ampl1"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/ed_ampl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/ed_numero"/>

        <TextView
            android:id="@+id/tv_ampl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/tv_ampl2"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/ed_ampl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/ed_numero"/>

        <Button
            android:id="@+id/bt_calc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_orange_light"
            android:text="@string/bt_calc"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_tempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/tv_preparo"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/tv_tempo_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/background_dark" />

    </LinearLayout>
</LinearLayout>